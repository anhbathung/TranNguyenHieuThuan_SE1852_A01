<Window x:Class="TranNguyenHieuThuanWPF.CustomerEditDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Chỉnh sửa thông tin khách hàng" Height="350" Width="400" WindowStartupLocation="CenterOwner">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <StackPanel>
            <Label Content="Tên công ty"/>
            <TextBox x:Name="txtCompanyName"/>
            <Label Content="Người liên hệ"/>
            <TextBox x:Name="txtContactName"/>
            <Label Content="Chức danh"/>
            <TextBox x:Name="txtContactTitle"/>
            <Label Content="Địa chỉ"/>
            <TextBox x:Name="txtAddress"/>
            <Label Content="SĐT"/>
            <TextBox x:Name="txtPhone"/>
        </StackPanel>
        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
            <Button Content="Lưu" Width="80" Margin="0,0,10,0" Click="BtnSave_Click"/>
            <Button Content="Hủy" Width="80" Click="BtnCancel_Click"/>
        </StackPanel>
    </Grid>
</Window> 