<Window x:Class="TranNguyenHieuThuanWPF.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Login" Height="350" Width="400">
    <StackPanel Margin="20">
        <TextBlock Text="Đăng nhập khách hàng" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,10,0,5"/>
        <TextBox x:Name="txtPhone" Width="200" HorizontalAlignment="Center" Margin="0,0,0,20"/>

        <TextBlock Text="Đăng nhập nhân viên" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,10,0,5"/>
        <TextBox x:Name="txtUsername" Width="200" HorizontalAlignment="Center" Margin="0,0,0,10"/>
        <PasswordBox x:Name="txtPassword" Width="200" HorizontalAlignment="Center" Margin="0,0,0,20"/>
        <TextBlock x:Name="txtStatus" Foreground="Red" Margin="0,10,0,0"/>
        <Button Content="Đăng nhập" Height="31" Width="94" Click="LoginButton_Click"/>
    </StackPanel>
</Window>